@model pethotel_manager.Models.InvoiceViewModel

@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    <div class="form-horizontal">
    </div>



<div class="container">
    <div class="table table-hover">
        <h3>商品細節</h3>
    </div>
    @*<div class="col-lg-12">*@
    <table class="table table-hover">
        <thead>
            <tr class="info">


                <th style="vertical-align: middle !important;text-align: center;" class="text-center">商品圖片</th>
                <th style="vertical-align: middle !important;text-align: center;" class="text-center">商品名稱</th>
                <th style="vertical-align: middle !important;text-align: center;" class="text-center">商品類別</th>
                <th style="vertical-align: middle !important;text-align: center;" class="text-center">商品總數</th>
                <th style="vertical-align: middle !important;text-align: center;" class="text-center">單一商品 總價</th>
             
     
            </tr>

        </thead>

        <tbody class="table-hover">




            @foreach (var pd in Model.InvoiceViewModelOutPutList)
            {
                <tr>

                    <td width="100px" style="vertical-align: middle !important;text-align: center;" class="text-center">
                        <img class="img-responsive" src="~/FileUploads/@pd.img" style="height: 100px; width: 100px;">
                    </td>


                    <td style="vertical-align: middle !important;text-align: center;" class="text-center">@pd.name</td>
                    <td style="vertical-align: middle !important;text-align: center;" class="text-center">@pd.type_string</td>
                    <td style="vertical-align: middle !important;text-align: center;" class="text-center">@pd.count</td>
                    <td style="vertical-align: middle !important;text-align: center;" class="text-center">@pd.total</td>


                </tr>

            }
            <tr class="danger">


                <th style="vertical-align: middle !important;text-align: center;" class="text-center"></th>
                <th style="vertical-align: middle !important;text-align: center;" class="text-center"></th>
                <th style="vertical-align: middle !important;text-align: center;" class="text-center"></th>
                <th style="vertical-align: middle !important;text-align: center;" class="text-center">全部商品 總數 : @Model.invoice_count</th>
                <th style="vertical-align: middle !important;text-align: center;" class="text-center">全部商品 總價 : @Model.invoice_total</th>


            </tr>
 
        </tbody>
    </table>

    @*</div>*@

</div>


}
<div>
    @Html.ActionLink("回商品訂單管理", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

