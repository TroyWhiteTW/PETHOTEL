@model pethotel_manager.Entity.Product
@{
				/**/

				ViewBag.Title = "Edit";
				Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<html>
<head>
	<meta charset="utf-8" />
	<title>Table Style</title>


	<meta name="viewport" content="initial-scale=1.0; maximum-scale=1.0; width=device-width;">
	<link rel="stylesheet" href="~/css/樣式.CSS">
</head>
<body>

	<div class="container">

		<!-- form區塊 -->
		<div class="container orderForm">
			<!-- <div class="image">
				<img src="./pic/ticket.png" />
			</div> -->
			<form method="post" action="">
				<h2>修改商品資料</h2>



				<div class="form-group row">
					<label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg title">p_id</label>
					<div class="col-sm-9">
						<input type="text" id="p_id" name="p_id" class="form-control" placeholder="" readonly value="@Model.p_id" />
					</div>
				</div>



				<div class="form-group row">
					<label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg title">p_type</label>
					<div class="col-sm-9">
						<input type="text" id="p_type" name="p_type" class="form-control" placeholder="" value="@Model.p_type" />
					</div>
				</div>



				<div class="form-group row">
					<label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg title">p_name</label>
					<div class="col-sm-9">
						<input type="text" id="p_name" name="p_name" class="form-control" placeholder="" value="@Model.p_name" />
					</div>
				</div>

				<div class="form-group row">
					<label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg title">p_content</label>
					<div class="col-sm-9">
						<input type="text" id="p_content" name="p_content" class="form-control" placeholder="" value="@Model.p_content" />
					</div>
				</div>

				<div class="form-group row">
					<label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg title">p_price</label>
					<div class="col-sm-9">
						<input type="text" id="p_price" name="p_price" class="form-control" placeholder="" value="@Model.p_price" />
					</div>
				</div>

				<div class="form-group row">
					<label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg title">p_count</label>
					<div class="col-sm-9">
						<input type="text" id="p_count" name="p_count" class="form-control" placeholder="" value="@Model.p_count" />
					</div>
				</div>

				<div class="form-group row">
					<label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg title">p_image</label>
					<div class="col-sm-9">
						<input type="text" id="p_image" name="p_image" class="form-control" placeholder="" value="@Model.p_image" />
					</div>
				</div>




				<!-- modal按鈕 -->
				<input type="submit" class="btn" value="確認" />

			</form>



		</div>

		<!-- form區塊 -->



	</div>



</body>

</html>
