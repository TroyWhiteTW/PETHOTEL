@model List<PETHOTEL.Models.ProductViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_pet.cshtml";
}


<div id="myCarousel1" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->

    <ol class="carousel-indicators">
        <li data-target="#myCarousel1" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel1" data-slide-to="1"></li>
        <li data-target="#myCarousel1" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/img/1.jpg" style="width:100%; height: 200px" alt="First slide">
            <div class="carousel-caption">
                <h1><br>購物車系統~~~~ </h1>
            </div>
        </div>
        <div class="item">
            <img src="~/img/1.jpg" style="width:100%; height: 200px" alt="Second slide">
            <div class="carousel-caption">
                <h1>vacayhome<br> spa & Resort</h1>
            </div>
        </div>
        <div class="item">
            <img src="~/img/2.jpg" style="width:100%; height: 200px" alt="Third slide">
            <div class="carousel-caption">
                <h1>vacayhome<br> spa & Resort</h1>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel1" data-slide="prev"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
    <a class="right carousel-control" href="#myCarousel1" data-slide="next"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>

</div>
<div class="clearfix"></div>



<!--gallery block--->
<section class="gallery-block gallery-front">
    <div class="container">
        <div class="blog-list">
            <h4>上架商品</h4>

            <div class="row">

                @*<img src="~/img/shopcar.png" />*@
                @foreach (var product in Model)
                {

                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">


                        <div class="product-desc-side">
                            <div class="gallery-image">
                                <img class="img-responsive" src="@product.p_image_href" style="height: 150px; width: 150px;">
                                <div class="overlay">
                                    <a class="info pop example-image-link img-responsive" href="@product.p_image_href" data-lightbox="example-1"><i class="fa fa-search" aria-hidden="true"></i></a>

                                  
                                </div>
                            </div>

                            <h3><a href="single-blog.html">@product.p_name</a></h3>
                            <p>@product.p_content</p>
                            <div class="links"><label>售價: @product.p_price </label>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<a onclick="AddToCart('@product.p_id') " href="javascript:void(0);">加入購物車</a></div>
                            </div>          
                        <br><br><br><br><br>
                  
                    </div>

                }
            </div>
        </div>
    </div>
</section>




