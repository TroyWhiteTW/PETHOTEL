@model pethotel_manager.Models.OrderIndexViewModel
@using pethotel_manager.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


    string o_pet_type_string(int x)
    {
        string s = "未定義";
        switch (x)        {
            case 0:
                s = "小狗";
                break;
            case 1:
                s = "小貓";
                break;
            case 2:
                s = "小雞雞";
                break;
        }
        return s;
    }

    string o_pet_sex_string(int x)
    {
        string s = "未定義";
        switch (x)
        {
            case 0:
                s = "公";
                break;
            case 1:
                s = "母";
                break;
            case 2:
                s = "小雞雞";
                break;
        }
        return s;
    }
    string o_status_string(int x)
    {
        string s = "未定義";
        switch (x)
        {
            case 0:
                s = "已完成";
                break;
            case 1:
                s = "未付款";
                break;
            case 2:
                s = "已付款";
                break;
        }
        return s;
    }
}

<html>
<head>
    <meta charset="utf-8" />
    <title>Table Style</title>


    <meta name="viewport" content="initial-scale=1.0; maximum-scale=1.0; width=device-width;">
    @*<link rel="stylesheet" href="~/css/樣式.CSS">*@
</head>
<body>

    <div class="container">
        <div class="table table-hover">
            <h3>訂單列表</h3>
        </div>
        @*<div class="col-lg-12">*@
        <table class="table table-hover">
            <thead>
                <tr class="info">
                    
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">訂單編號</th>
                    @*<th style="vertical-align: middle !important;text-align: center;" class="text-center">房間編號</th>*@
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">房間<br>名稱</th>
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">房間價格</th>
                    @*<th style="vertical-align: middle !important;text-align: center;" class="text-center">客戶編號</th>*@
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">客戶<br>姓名</th>
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">客戶電話</th>
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">客戶地址</th>
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">寵物<br>名稱</th>
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">寵物<br>種類</th>
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">寵物<br>性別</th>
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">備註欄</th>
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">訂單狀態</th>
                    @*<th class="text-left">下單日期</th>*@
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">入住時間</th>
                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">退房時間</th>


                    <th style="vertical-align: middle !important;text-align: center;" class="text-center">管理者<br>操作</th>
                </tr>

            </thead>

            <tbody class="table-hover">




                @foreach (OrderViewModel ord in Model.OrderList)
                {
                    <tr>

                        <td  width="50px"style="vertical-align: middle !important;text-align: center;"class="text-center">@ord.o_id</td>
                        @*<td style="vertical-align: middle !important;text-align: center;"class="text-center">@ord.r_id</td>*@
                        <td style="vertical-align: middle !important;text-align: center;" class="text-center">
                            &nbsp&nbsp&nbsp&nbsp<br>
                            @ord.room.r_name
                            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp

                        <td style="vertical-align: middle !important;text-align: center;" class="text-center">                            
                            @Math.Truncate(ord.room.r_price.Value) 元
                            @*<td style="vertical-align: middle !important;text-align: center;"class="text-center">@ord.c_id</td>*@
<td style="vertical-align: middle !important;text-align: center;" class="text-center">
                            &nbsp&nbsp&nbsp&nbsp<br>
                            @ord.customer.c_name
                            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                        </td>
                        <td style="vertical-align: middle !important;text-align: center;"class="text-center">
                            @ord.customer.c_phone
                        
                        </td>
                        <td  width="100px" style="vertical-align: middle !important;text-align: center;"class="text-center">
                            @ord.customer.c_address
                     
                        </td>
                        <td style="vertical-align: middle !important;text-align: center;"class="text-center">@ord.o_pet_name</td>
                        <td style="vertical-align: middle !important;text-align: center;"class="text-center">@o_pet_type_string(ord.o_pet_type)</td>
                        <td style="vertical-align: middle !important;text-align: center;"class="text-center">@o_pet_sex_string(ord.o_pet_sex)</td>
                        <td style="vertical-align: middle !important;text-align: center;"class="text-center">@ord.o_pet_content</td>
                        <td style="vertical-align: middle !important;text-align: center;"class="text-center">@o_status_string(ord.o_status)</td>
                        @*<td class="text-left">@ord.o_create_datetime</td>*@
                        <td  width="100px"style="vertical-align: middle !important;text-align: center;"class="text-center">@ord.o_start_date.ToString("yyyy-MM-dd")</td>
                        <td  width="100px"style="vertical-align: middle !important;text-align: center;"class="text-center">@ord.o_end_date.ToString("yyyy-MM-dd")</td>



                        @*<td class="text-left">
                            <img class="img-responsive" src="~/FileUploads/@ord" style="height: 200px; width: 200px;">
                        </td>*@

                        <td style="vertical-align: middle !important;text-align: center;"class="text-center">


                            <a class="btn btn-warning " href="/Order/Edit/@ord.o_id">修改</a>


                            <a class="btn btn-danger " href="/Order/Delete/@ord.o_id">刪除</a>

                        </td>
                    </tr>

                }

            </tbody>
        </table>

        @*</div>*@
    
    </div>
</body>

</html>

