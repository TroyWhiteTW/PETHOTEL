@model List<PETHOTEL.entity.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_pet.cshtml";
}
<div class="row">
    @foreach (var product in this.Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img class="ProductImg" src="@product.p_image" alt="商品圖片">
                <div class="caption">
                    <h3>@product.p_name</h3>
                    <p>@product.p_count</p>
                    <p>售價 : @product.p_price</p>
                    <p>庫存 : @product.p_count</p>
                    <p>
                        <a onclick="AddToCart('@product.p_id')" href="javascript:void(0);"
                           class="btn btn-primary" role="button">
                            加入購物車
                        </a>
                        <a onclick="AddToCart('@product.p_id')" href="javascript:void(0);"
                           class="btn btn-primary" role="button">
                            加入購物車
                        </a>
                        <a onclick="AddToCart('@product.p_id')" href="javascript:void(0);"
                           class="btn btn-default" role="button">加入</a>
                        <a href="javascript:void(0);" class="btn btn-default" role="button">
                            詳細資訊
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>